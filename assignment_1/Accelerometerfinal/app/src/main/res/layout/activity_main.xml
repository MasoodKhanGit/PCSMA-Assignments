<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/accelerometer_main">

    <TextView android:text="Accelerometer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/bStart"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:onClick="start"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/bStop"
        android:layout_alignTop="@+id/bStart"
        android:layout_alignParentEnd="true"
        android:onClick="stop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x-axis = null"
        android:id="@+id/xValue"
        android:layout_below="@+id/bStart"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="43dp"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="y-axis = null"
        android:id="@+id/yValue"
        android:textSize="20dp"
        android:layout_below="@+id/xValue"
        android:layout_alignStart="@+id/xValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="z-axis = null"
        android:id="@+id/zValue"
        android:textSize="20dp"
        android:layout_below="@+id/yValue"
        android:layout_alignStart="@+id/yValue" />

</RelativeLayout>
